<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- 상단 제목 - Todo 프로그램 제목 추가 -->
    <TextView
        android:id="@+id/program_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Todo"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="#000" />

    <!-- 상단 블록 -->
    <LinearLayout
        android:id="@+id/top_block"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#FFFFFF"
        android:padding="16dp">
        <LinearLayout
            android:id="@+id/rounded_corner_login_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner"
            android:padding="16dp"
            android:gravity="center">

            <TextView
                android:id="@+id/login_info"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:minHeight="50dp"
                android:text="로그인 정보"
                android:textSize="18sp"
                android:textColor="#000" />
        </LinearLayout>
    </LinearLayout>

    <!-- 중단 블록 -->
    <LinearLayout
        android:id="@+id/middle_block"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.25"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#FFFFFF"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/rounded_corner_weekly_schedule"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_corner"
            android:padding="16dp"
            android:gravity="center"> <!-- 부모 레이아웃에만 정렬 설정 -->

            <TextView
                android:id="@+id/weekly_schedule_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="주간 일정"
                android:textSize="18sp"
                android:textColor="#000" /> <!-- gravity 속성 제거 -->
        </LinearLayout>
    </LinearLayout>

    <!-- 하단 툴바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#212121"
        android:gravity="center">

        <Button
            android:id="@+id/today_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today"
            android:textColor="#FFF" />

        <Button
            android:id="@+id/calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="캘린더"
            android:textColor="#FFF" />

        <Button
            android:id="@+id/notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="알림"
            android:textColor="#FFF" />

        <!-- 로그아웃 버튼 추가 -->
        <Button
            android:id="@+id/logout_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그아웃"
            android:textColor="#FFF" />
    </LinearLayout>
</LinearLayout>
